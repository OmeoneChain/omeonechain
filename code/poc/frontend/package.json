{
  "name": "omeonechain-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:mobile": "MOBILE_BUILD=true next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "preview": "next start",
    "cap:init": "cap init BocaBoca com.bocaboca.app --web-dir=out",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "mobile:build": "npm run build:mobile && npm run cap:sync",
    "mobile:ios": "npm run mobile:build && npm run cap:open:ios",
    "mobile:android": "npm run mobile:build && npm run cap:open:android"
  },
  "dependencies": {
    "@capacitor-community/contacts": "^6.1.1",
    "@capacitor/app": "^6.0.3",
    "@capacitor/camera": "^6.1.3",
    "@capacitor/core": "^6.2.1",
    "@capacitor/haptics": "^6.0.3",
    "@capacitor/ios": "^6.2.1",
    "@capacitor/keyboard": "^6.0.4",
    "@capacitor/preferences": "^6.0.4",
    "@capacitor/splash-screen": "^6.0.4",
    "@capacitor/status-bar": "^6.0.3",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@react-google-maps/api": "^2.20.7",
    "@supabase/supabase-js": "^2.52.1",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "i18next": "^25.6.3",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.321.0",
    "next": "14.1.0",
    "next-intl": "^4.5.5",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^16.3.5",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@capacitor/cli": "^6.2.1",
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.0-beta.3",
    "baseline-browser-mapping": "^2.9.14",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.5.6",
    "typescript": "^5.8.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}",
      "<rootDir>/components/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/components/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "components/**/*.{js,jsx,ts,tsx}",
      "!src/index.js",
      "!src/main.jsx",
      "!**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ]
  }
}
